<!DOCTYPE html>
<%- include('../partials/head') %> 
<head>
  <link rel="stylesheet" href="/css/productDetail.css">
  <link rel="stylesheet" href="/css/productShop.css">
  <title>Document</title>
</head>

<body>
  <%- include('../partials/header.ejs') %>
  <section class="nav-categorias">
    <!-- <ul>
      <% for (let i=0; i<categorias.length; i++) { %>
        <li><%= categorias[i].name %></li>
      <% } %>
    </ul> -->
  </section>

  <section class="shop-filters">
  </section>

  <main>
    <% let userPrice; // Variable para mostrar el precio con descuento%> 
    <% for (let i=0; i<productos.length; i++) { %>
      <div class="shop-producto">
        <div class="producto-img">
          <img src="/img/uploads/<%= productos[i].images[0] %> " alt="imagen del producto">
        </div>
        <div class="info-de-producto">
          <h5 class="producto-nombre"><a href="../products/productDetail/<%= productos[i].id %>"><%= productos[i].name %></a></h5>
          <p class="producto-fabricante"> de <%= productos[i].manufacturer %></p>
          <div class="calificacion">
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-regular fa-star"></i>
          </div>
          <div class="shop-precio">
            <% if (productos[i].discount > 0) { %>
              <% userPrice = (productos[i].price * (1 - (productos[i].discount / 100))).toFixed(0) %> 
              <h5 class="producto-precio-descuento">$ <%= userPrice %></h5>
              <h6 class="producto-precio-completo"> <%= productos[i].price %></h6>
            <% } else { %>
              <h5 class="producto-precio-descuento">$ <%= productos[i].price %></h5>
            <% } %> 
          </div>
          
          <% if (productos[i].stock <= 15) { %>
            <p class="stock">5 Unidades restantes</p>
          <% } %>

          <button class="btn"><i class="fa-solid fa-cart-shopping"></i></button>
          <!-- <p class="anadir-deseados">aÃ±adir a lista de deseados</p> -->
        </div>
      </div>
    <% } %> 
  </main>
</body>
</html>