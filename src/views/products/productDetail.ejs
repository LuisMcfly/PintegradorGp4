<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %> 
<head>
  <link rel="stylesheet" href="/css/productDetail.css" />
  <title>Pegasus Tech | Producto</title>
</head>

<body> 
  <%- include('../partials/header') %>

  <section class="producto-detail">
    <div class="producto-header">
      <h2><%= producto.name +' '+ producto.model %></h2>
      <a class="fabricante" href="#">más productos de la marca <%= producto.manufacturer %> </a>
      <div class="calificacion">
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-regular fa-star"></i>
      </div>
    </div>
    
    <div class="producto-elementos">
      <div class="producto-imagenes">                       
        <div class="img-main"><img src="/img/uploads/<%= producto.images[0] %> " alt="imagen de producto"></div>
        <ul class="img-alt">
          <% for(let i=1; i<producto.images.length; i++){ %>
            <li>
              <button>
                <i class="fa-regular fa-circle-dot"></i>
                <img src="/img/uploads/<%= producto.images[i] %> " alt="view">
              </button>
            </li>
          <% } %>  
        </ul>
      </div>

      <div class="producto-info"> 
        <div class="producto-opciones">
          <% for(let i=0; i<producto.colors.length; i++){ %>
            <button> <%= producto.colors[i] %> </button>
          <% } %>  
        </div>
        <p class="stock"><%= producto.stock %>  Unidades restantes</p>
        <p class="descripcion"><%= producto.description %> </p>
      </div>

      <div class="producto-precio">
        <div class="precio-numero">
          <h2>$ <%= producto.price %></h2><h4>.900</h4>
        </div>
        
        <div class="btns-producto">
          <form action="/cart">
            <button class="btn anadir-carrito degradado-btn">Añadir al Carrito<i class="carrito"></i></button>
            <button class="btn anadir-deseados">Añadir a Deseados</button>
          </form>
        </div>
      </div>

    </div>
  </section>

  <main class="contenedor-principal">
    <h2 class="section-title degradado">Recomendados</h2>
    <section class="recopilacion">
      <div class="producto-preview">
        <img src="/img/productDetail/productoDemo.jpg">
        <a href="productDetail.html"><h3>Nombre del Producto</h3></a>
        <p class="precio">$500.000</p>
        <button class="btn">Añadir al Carrito</button>
      </div>
      <div class="producto-preview">
        <img src="/img/productDetail/productoDemo.jpg">
        <a href="productDetail.html"><h3>Nombre del Producto</h3></a>
        <p class="precio">$500.000</p>
        <button class="btn">Añadir al Carrito</button>
      </div>
      <div class="producto-preview">
        <img src="/img/productDetail/productoDemo.jpg">
        <a href="productDetail.html"><h3>Nombre del Producto</h3></a>
        <p class="precio">$500.000</p>
        <button class="btn">Añadir al Carrito</button>
      </div>
      <div class="producto-preview">
        <img src="/img/productDetail/productoDemo.jpg">
        <a href="productDetail.html"><h3>Nombre del Producto</h3></a>
        <p class="precio">$500.000</p>
        <button class="btn">Añadir al Carrito</button>
      </div>
    </section>

    <section class="recopilacion historial" style="display: none">
      <div class="producto-preview"></div>
      <div class="producto-preview"></div>
      <div class="producto-preview"></div>
      <div class="producto-preview"></div>
    </section>
  </main>
  
  <%- include('../partials/footer') %>
</body>
</html>