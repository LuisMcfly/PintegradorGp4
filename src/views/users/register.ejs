<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
<head> 
  <link rel="stylesheet" href="/css/login&register.css" />
</head>

<body> 
  <%- include('../partials/header') %>

  <main class="login-register-container">
    
    <section class="form-container">
      <h1>register</h1>

      <form action="/users/register" method="POST">

        <div class="control">
          <label for="fullName" >Nombre completo</label>
          <input type="text" name="fullName" id="fullName" value="<%= locals.oldData && oldData.fullName ? oldData.fullName : null%>">
          <% if(locals.errors && errors.fullName) { %>
            <div class="form-error-message">
              <%= errors.fullName.msg %> 
            </div> 
          <% } %>
        </div>

        <div class="control">
          <label for="email">Correo electrónico</label>
          <input type="email" name="email" id="email" value="<%= locals.oldData && oldData.email ? oldData.email : null%>">
          <% if(locals.errors && errors.email) { %>
            <div class="form-error-message">
              <%= errors.email.msg %> 
            </div> 
          <% } %>
        </div>

        <div class="control">
          <label for="password">Ingresa una contraseña</label>
          <input type="password" name="password" id="password" value="<%= locals.oldData && oldData.password ? oldData.password: null%>">
          <% if(locals.errors && errors.password) { %>
            <div class="form-error-message">
              <%= errors.password.msg %> 
            </div> 
          <% } %>
        </div>

        <div class="control">
          <label for="repassword">Repite la contraseña</label>
          <input type="password" name="repassword" id="repassword" value="<%= locals.oldData && oldData.repassword? oldData.repassword : null%>">
          <% if(locals.errors && errors.repassword) { %>
            <div class="form-error-message">
              <%= errors.repassword.msg %> 
            </div> 
          <% } %>
        </div>

        <div class="control">
          <label for="phone">Numero Celular</label>
          <input type="text" name="phone" id="phone" value="<%= locals.oldData && oldData.phone ? oldData.phone : null%>">
          <% if(locals.errors && errors.phone) { %>
            <div class="form-error-message">
              <%= errors.phone.msg %>   
            </div> 
          <% } %>
        </div>

        <input type="hidden" name="address" value="undefined">
        <input type="hidden" name="gender" value="undefined">
        <input type="hidden" name="title" value="User">

        <span class="Rememberme-login">
          <input type="checkbox" name="termsAndConditions"> Aceptas los terminos y condiciones de nuestro servicio
        </span>
        <div class="control">
          <input onclick="confirmar()" id="btn" type="submit" value="Terminar el Registro">
        </div>
      </form>
      <div class="link-forgot-password">
        <a href="login.html">Ya tienes una cuenta?</a>
      </div>
    </section>
  </main>

  <%- include('../partials/footer') %>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  
  <script>/*preguntar si el registro del usuario se hizo*/
      function confirmar(){
          Swal.fire({
              title: 'Formulario enviado con exito!'
          }).then(res=>{
              window.location = '/users/register'
          })
      }
  </script>
</body>
</html>