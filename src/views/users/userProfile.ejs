<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<head>
  <link rel="stylesheet" href="/css/userProfile.css" />
</head>

<body>
  <%- include('../partials/header') %>
  <main class="form-container profile-grid">
    
    <section class="form-section user-image">
      <div>
        <img src=<%= usuario.imagen %>/>
      </div>
      <h2>Bienvenido</h2>
      <h1><%= usuario.fullName %></h1>
    </section>

    <section class="form-section user-info">
      <div class="form-field">
        <h2><%= usuario.fullName %> </h2>
      </div>
      <div class="form-field">
        <p> Correo </p>
        <h3> <%= usuario.email %> </h3>
      </div>
      <div class="form-field">
        <p> Teléfono </p>
        <h3> <%= usuario.phone %> </h3>
      </div>
      <div class="form-field">
        <p> Dirección </p>
        <% address = usuario.address !== null ? usuario.address : 'Sin definir' %> 
        <h3> <%= address %> </h3>
      </div>
      <div class="form-field">
        <p> Género </p>
        <h3> <%= usuario.gender %> </h3>
      </div>
    </section>

    <section class="form-section user-edit-button">
      <i class="fa-solid fa-gear"></i>
      <h2>Editar Información</h2>
    </section>

    <section class="form-section user-log-out">
      <i class="fa-solid fa-power-off"></i>
      <h2>Cerrar Sesión</h2>
    </section>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>